generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Student {
  id String @id @default(uuid())
  stuName String
  stuImg String
  stuUserName String @unique
  stuPassword String
  UserRole UserRole
  courses Course[] @relation("Enrollments")
  cert Cert[]
}

model Cert{
  id String @id @default(uuid())
  isComplete Boolean @default(false)
  courseName String
  courseId String
  stuName String
  stuId String
  course Course @relation(fields: [courseId],references: [id])
  student Student @relation(fields: [stuId],references: [id])
}

model Admin {
  id String @id @default(uuid())
  admName String
  admImg String
  admUserName String @unique
  admPassword String
  UserRole UserRole
  course Course[]
}

model Course {
  id String @id @default(uuid())
  courseName String
  courseImg String
  courseDescription String
  courseRating Float
  hoursOfcontent Float
  practicalExcercise Float
  CoursePrice Float
  enrolledCount Int @default(0)
  tutorId String 
  students Student[] @relation("Enrollments")
  admin Admin @relation(fields: [tutorId],references: [id])
  cert Cert[]
}

enum UserRole {
  ADMIN
  STUDENT
  DUMMY
}